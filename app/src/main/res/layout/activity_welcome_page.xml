<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/welcomeTitle"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WelcomePage"
    android:background="@drawable/background">

    <TextView
        android:id="@+id/profilTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_textbox"
        android:text="hellobellomyfriend"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.13999999"
        tools:ignore="MissingConstraints" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/openprofile"
        style="@style/Widget.Material3.Button"
        android:layout_width="253dp"
        android:layout_height="66dp"
        android:layout_marginTop="250dp"
        android:backgroundTint="#000000"
        android:onClick="openProfile"
        android:text="@string/profil_szerkeszt_se2"
        android:textColor="@android:color/white"
        app:cornerRadius="30dp"
        app:layout_constraintBottom_toTopOf="@+id/openMenu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profilTitle" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/openMenu"
        android:layout_width="253dp"
        android:layout_height="66dp"
        android:text="@string/kamer_k_megtekint_se"
        android:textColor="@android:color/white"
        android:backgroundTint="#000000"
        style="@style/Widget.Material3.Button"
        app:cornerRadius="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.83"
        android:onClick="openMenu" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottieView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        app:layout_constraintBottom_toTopOf="@+id/openprofile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profilTitle"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_fileName="Animation-1747418769953.json"
        tools:ignore="MissingConstraints" />


</androidx.constraintlayout.widget.ConstraintLayout>